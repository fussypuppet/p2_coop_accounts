<div class="container">
    <h2><%= shareholder.name %></h2>
    <p>Unit <%= shareholder.unit.number %>&nbsp&nbsp&nbsp&nbsp|&nbsp&nbsp&nbsp&nbspShareholder since <%= shareholder.startDate.getMonth() + 1 %>/<%= shareholder.startDate.getFullYear() %></p>
    <% if (years == 2) { %>
        <p>Displaying last 2 years 
            <button class="btn btn-secondary" onclick="<%= `window.location.href='/shareholders/${shareholder.id}'` %>">Show full history</button>
        </p>
    <% } else { %>
        <p>Displaying full history 
            <button class="btn btn-secondary" onclick="<%= `window.location.href='/shareholders/${shareholder.id}?years=2'` %>">Show last 2 years</button>
        </p>
    <% } %>
    <img src="<%= graphImgSrc %>" alt="graph of running balances">
    <hr>
    <h3>Transaction History</h3>
    <table class="table">
        <tr>
            <th>Date</th>
            <th>Type</th>
            <th>Check #</th>
            <th>Amount</th>
            <th>Notes</th>
            <th>Running Balance</th>
            <th>Actions</th>
        </tr>
        <% shareholder.transactions.forEach(transaction => { %>
            <tr>
                <td>
                    <%= transaction.date.getMonth() + 1 %>/<%= transaction.date.getDate() %>/<%= transaction.date.getFullYear() %>
                </td>
                <td>
                    <%= transaction.category %>
                </td>
                <td>
                    <%= transaction.checkNumber %>
                </td>
                <td>
                    <%= transaction.amount %>
                </td>
                <td>
                    <%= transaction.notes %>
                </td>
                <td>
                    <%= transaction.runningBalance %>
                </td>
                <td>
                    <% if (transaction.category.includes("payment")) { %>
                        <button class="btn btn-secondary" onclick="<%= `window.location.href='/transactions/edit/${transaction.id}'` %>">Edit</button>
                        <form class="delete" method="POST" action="<%= `/transactions/delete/${transaction.id}?_method=DELETE` %>">
                            <input class="btn btn-secondary" type='submit' value="Delete">
                        </form>
                    <% } %>
                </td>
            </tr>
        <% }) %>
    </table>
</div>