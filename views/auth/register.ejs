<form action="/auth/register" method="POST">
    <div class="form-group">
        <label for="authEmail">Email</label>
        <input id="authEmail" class="form-control" type="email" name="email" required>
    </div>
    <div class="form-group">
        <label for="authName">Name</label>
        <input id="authName" class="form-control" type="text" name="name" required>
    </div>
    <div class="form-group">
        <label for="unit">Unit</label>
        <select class="form-control" id="unit" name="unit" required>
            <% units.forEach(unit => { %>
                <option value="<%= unit.id %>"><%= unit.number %></option>
            <% }) %>
        </select>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="checkbox" id="administrator" name="administrator">
        <label class="form-check-label" for="administrator">I'm an administrator</label>
    </div>
    <div class="form-group">
        <label for="authPassword">Password</label>
        <input id="authPassword" class="form-control" type="password" name="password" required></label>
    </div>
    <input class="btn btn-primary" type="submit" value="Register">
</form>